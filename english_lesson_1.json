  "content": {
    "introduction": {
      "text": "در این درس با پایه‌ای‌ترین مکالمات انگلیسی آشنا می‌شوید.",
      "audio_url": "audio/lessons/en_001/intro.mp3",
      "image_url": "images/lessons/en_001/intro.png"
    },
    "dialogs": [
      {
        "id": "dialog_1",
        "title": "ملاقات اول",
        "characters": [
          {"name": "Ali", "role": "language_learner"},
          {"name": "Sarah", "role": "english_speaker"}
        ],
        "lines": [
          {
            "character": "Sarah",
            "english": "Hello!",
            "farsi": "سلام!",
            "phonetic": "/həˈləʊ/",
            "audio_url": "audio/dialogs/en_001/hello.mp3",
            "translation_tip": "رسمی: Hello، غیررسمی: Hi"
          },
          {
            "character": "Ali",
            "english": "Hi! How are you?",
            "farsi": "سلام! حالت چطوره؟",
            "phonetic": "/haɪ haʊ ɑːr juː/",
            "audio_url": "audio/dialogs/en_001/hi_how_are_you.mp3"
          },
          {
            "character": "Sarah",
            "english": "I'm good, thank you. And you?",
            "farsi": "خوبم، ممنون. تو چطور؟",
            "phonetic": "/aɪm ɡʊd θæŋk juː ænd juː/",
            "audio_url": "audio/dialogs/en_001/im_good.mp3"
          },
          {
            "character": "Ali",
            "english": "I'm fine too. What's your name?",
            "farsi": "من هم خوبم. اسمت چیه؟",
            "phonetic": "/aɪm faɪn tuː wɒts jɔːr neɪm/",
            "audio_url": "audio/dialogs/en_001/whats_your_name.mp3"
          },
          {
            "character": "Sarah",
            "english": "My name is Sarah. And you?",
            "farsi": "اسم من سارا است. تو چطور؟",
            "phonetic": "/maɪ neɪm ɪz ˈseərə ænd juː/",
            "audio_url": "audio/dialogs/en_001/my_name_is.mp3"
          },
          {
            "character": "Ali",
            "english": "I'm Ali. Nice to meet you!",
            "farsi": "من علی هستم. از آشنایی با تو خوشحالم!",
            "phonetic": "/aɪm ˈɑːli naɪs tə miːt juː/",
            "audio_url": "audio/dialogs/en_001/nice_to_meet.mp3"
          },
          {
            "character": "Sarah",
            "english": "Nice to meet you too! Goodbye!",
            "farsi": "من هم از آشنایی با تو خوشحالم! خداحافظ!",
            "phonetic": "/naɪs tə miːt juː tuː ˌɡʊdˈbaɪ/",
            "audio_url": "audio/dialogs/en_001/goodbye.mp3"
          },
          {
            "character": "Ali",
            "english": "Bye! See you later!",
            "farsi": "خداحافظ! بعداً می‌بینمت!",
            "phonetic": "/baɪ siː juː ˈleɪtər/",
            "audio_url": "audio/dialogs/en_001/see_you_later.mp3"
          }
        ],
        "summary": {
          "english": "A simple greeting and introduction conversation.",
          "farsi": "یک مکالمه ساده برای احوالپرسی و معرفی."
        }
      }
    ],
    "vocabulary": {
      "title": "واژگان جدید این درس",
      "words": [
        {
          "english": "hello",
          "farsi": "سلام",
          "usage": "greeting someone",
          "example": "Hello, my friend!"
        },
        {
          "english": "how are you",
          "farsi": "حالت چطوره",
          "usage": "asking about someone's condition",
          "example": "How are you today?"
        },
        {
          "english": "name",
          "farsi": "اسم",
          "usage": "what someone is called",
          "example": "What is your name?"
        },
        {
          "english": "nice to meet you",
          "farsi": "از آشنایی خوشحالم",
          "usage": "polite expression when meeting someone",
          "example": "Nice to meet you, Ali!"
        },
        {
          "english": "goodbye",
          "farsi": "خداحافظ",
          "usage": "saying farewell",
          "example": "Goodbye, see you tomorrow!"
        }
      ]
    },
    "grammar": {
      "title": "نکات دستوری",
      "points": [
        {
          "title": "جمله‌های سوالی",
          "description": "برای ساخت سوال، فعل را قبل از فاعل می‌آوریم.",
          "examples": [
            "You are Ali. → Are you Ali?",
            "Your name is Sarah. → Is your name Sarah?"
          ],
          "pattern": "Verb + Subject + ... ?"
        },
        {
          "title": "ضمایر فاعلی",
          "description": "I (من)، You (تو/شما)، He (او - مذکر)، She (او - مونث)",
          "examples": [
            "I am Ali.",
            "You are Sarah.",
            "He is my friend."
          ]
        }
      ]
    },
    "practice": {
      "title": "تمرین‌ها",
      "exercises": [
        {
          "type": "multiple_choice",
          "question": "معنی 'Hello' چیست؟",
          "options": ["سلام", "خداحافظ", "متشکرم", "بله"],
          "correct_answer": 0,
          "explanation": "Hello به معنی سلام است."
        },
        {
          "type": "fill_in_blank",
          "sentence": "My ... is Ali.",
          "correct_answer": "name",
          "hint": "کلمه‌ای که به معنی 'اسم' است",
          "explanation": "My name is Ali. (اسم من علی است)"
        },
        {
          "type": "matching",
          "pairs": [
            {"english": "Hello", "farsi": "سلام"},
