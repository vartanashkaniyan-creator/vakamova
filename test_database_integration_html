    <script>
        // ==================== Ø³ÛŒØ³ØªÙ… Ù„Ø§Ú¯ ====================
        class TestLogger {
            constructor() {
                this.console = document.getElementById('console-output');
            }
            
            log(type, message) {
                const time = new Date().toLocaleTimeString('fa-IR');
                const line = document.createElement('div');
                line.className = `console-line log-${type}`;
                line.innerHTML = `[${time}] ${message}`;
                this.console.appendChild(line);
                this.console.scrollTop = this.console.scrollHeight;
                console.log(`[${type.toUpperCase()}] ${message}`);
            }
            
            info(message) { this.log('info', message); }
            success(message) { this.log('success', message); }
            error(message) { this.log('error', message); }
            warning(message) { this.log('warning', message); }
        }

        const logger = new TestLogger();

        // ==================== Database Mock ====================
        class MockDatabase {
            constructor() {
                this.data = {
                    users: new Map(),
                    lessons: new Map(),
                    progress: new Map(),
                    transactions: new Map()
                };
                this.version = 1;
                this.nextId = {
                    users: 1,
                    lessons: 1,
                    transactions: 1
                };
                this.transactionInProgress = false;
            }
            
            async migrateToVersion(version) {
                logger.info(`Ø´Ø±ÙˆØ¹ migration Ø§Ø² Ù†Ø³Ø®Ù‡ ${this.version} Ø¨Ù‡ ${version}`);
                
                if (version === 2 && this.version === 1) {
                    // Ø§Ø¶Ø§ÙÙ‡ Ú©Ø±Ø¯Ù† ÙÛŒÙ„Ø¯ level Ø¨Ù‡ users
                    for (let user of this.data.users.values()) {
                        user.level = 1;
                    }
                    this.version = 2;
                    logger.success('Migration Ø¨Ù‡ Ù†Ø³Ø®Ù‡ 2 Ø§Ù†Ø¬Ø§Ù… Ø´Ø¯');
                }
                
                if (version === 3 && this.version <= 2) {
                    // Ø§Ø¶Ø§ÙÙ‡ Ú©Ø±Ø¯Ù† Ø¬Ø¯ÙˆÙ„ progress
                    this.data.progress = new Map();
                    // Ø§Ø¶Ø§ÙÙ‡ Ú©Ø±Ø¯Ù† ÙÛŒÙ„Ø¯ coins Ø¨Ù‡ users
                    for (let user of this.data.users.values()) {
                        user.coins = user.coins || 100;
                    }
                    // Ø§Ø¶Ø§ÙÙ‡ Ú©Ø±Ø¯Ù† ÙÛŒÙ„Ø¯ price Ø¨Ù‡ lessons
                    for (let lesson of this.data.lessons.values()) {
                        lesson.price = lesson.price || 50;
                    }
                    this.version = 3;
                    logger.success('Migration Ø¨Ù‡ Ù†Ø³Ø®Ù‡ 3 Ø§Ù†Ø¬Ø§Ù… Ø´Ø¯');
                }
                
                return true;
            }
            
            async createUser(email, name) {
                if (this.transactionInProgress) {
                    throw new Error('Transaction Ø¯Ø± Ø­Ø§Ù„ Ø§Ø¬Ø±Ø§ Ø§Ø³Øª');
                }
                
                const id = this.nextId.users++;
                const user = {
                    id,
                    email,
                    name,
                    level: 1,
                    coins: 100,
                    created_at: new Date().toISOString()
                };
                
                this.data.users.set(id, user);
                logger.info(`Ú©Ø§Ø±Ø¨Ø± Ø§ÛŒØ¬Ø§Ø¯ Ø´Ø¯: ${email}`);
                return user;
            }
            
            async createLesson(title, language, difficulty = 'beginner') {
                const id = this.nextId.lessons++;
                const lesson = {
                    id,
                    title,
                    language,
                    difficulty,
                    price: difficulty === 'beginner' ? 50 : difficulty === 'intermediate' ? 100 : 200,
                    content: { exercises: [] }
                };
                
                this.data.lessons.set(id, lesson);
                logger.info(`Ø¯Ø±Ø³ Ø§ÛŒØ¬Ø§Ø¯ Ø´Ø¯: ${title}`);
                return lesson;
            }
            
            async createProgress(userId, lessonId, score = 0) {
                const key = `${userId}_${lessonId}`;
                const progress = {
                    user_id: userId,
                    lesson_id: lessonId,
                    score,
                    completed: score >= 80,
                    time_spent: 0,
                    updated_at: new Date().toISOString()
                };
                
                this.data.progress.set(key, progress);
                logger.info(`Progress Ø§ÛŒØ¬Ø§Ø¯ Ø´Ø¯ Ø¨Ø±Ø§ÛŒ Ú©Ø§Ø±Ø¨Ø± ${userId} Ùˆ Ø¯Ø±Ø³ ${lessonId}`);
                return progress;
            }
            
            async createTransaction(userId, lessonId, amount, paymentMethod = 'zarinpal') {
                const id = this.nextId.transactions++;
                const transaction = {
                    id,
                    user_id: userId,
                    lesson_id: lessonId,
                    amount,
                    status: 'completed',
                    payment_method: paymentMethod,
                    created_at: new Date().toISOString()
                };
                
                this.data.transactions.set(id, transaction);
                logger.info(`ØªØ±Ø§Ú©Ù†Ø´ Ø§ÛŒØ¬Ø§Ø¯ Ø´Ø¯: ${id} - Ù…Ø¨Ù„Øº: ${amount}`);
                return transaction;
            }
            
            async getUser(id) {
                return this.data.users.get(id);
            }
            
            async getLesson(id) {
                return this.data.lessons.get(id);
            }
            
            async getProgress(userId, lessonId) {
                return this.data.progress.get(`${userId}_${lessonId}`);
            }
            
            async updateUserCoins(userId, delta) {
                const user = await this.getUser(userId);
                if (!user) throw new Error('Ú©Ø§Ø±Ø¨Ø± ÛŒØ§ÙØª Ù†Ø´Ø¯');
                
                const newCoins = user.coins + delta;
                if (newCoins < 0) throw new Error('Ù…Ù‚Ø¯Ø§Ø± Ú©ÙˆÛŒÙ† Ú©Ø§ÙÛŒ Ù†ÛŒØ³Øª');
                
                user.coins = newCoins;
                logger.info(`Ú©ÙˆÛŒÙ† Ú©Ø§Ø±Ø¨Ø± ${userId} Ø¢Ù¾Ø¯ÛŒØª Ø´Ø¯: ${newCoins}`);
                return user;
            }
            
            async completeLesson(userId, lessonId, score, timeSpent) {
                const key = `${userId}_${lessonId}`;
                let progress = this.data.progress.get(key);
                
                if (!progress) {
                    progress = await this.createProgress(userId, lessonId, score);
                }
                
                progress.score = Math.max(progress.score, score);
                progress.completed = progress.score >= 80;
                progress.time_spent = (progress.time_spent || 0) + timeSpent;
                progress.updated_at = new Date().toISOString();
                
                logger.info(`Ø¯Ø±Ø³ ØªÚ©Ù…ÛŒÙ„ Ø´Ø¯: Ú©Ø§Ø±Ø¨Ø± ${userId} - Ø¯Ø±Ø³ ${lessonId} - Ø§Ù…ØªÛŒØ§Ø²: ${score}`);
                return progress;
            }
            
            async purchaseLesson(userId, lessonId) {
                // Ø´Ø±ÙˆØ¹ ØªØ±Ø§Ú©Ù†Ø´
                this.transactionInProgress = true;
                
                try {
                    const user = await this.getUser(userId);
                    const lesson = await this.getLesson(lessonId);
                    
