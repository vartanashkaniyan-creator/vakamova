                    this.transactionInProgress = false;
                    throw error;
                }
            }
            
            async bulkInsertUsers(count) {
                const startTime = Date.now();
                const users = [];
                
                for (let i = 0; i < count; i++) {
                    const user = await this.createUser(`user${i}@test.com`, `Ú©Ø§Ø±Ø¨Ø± ØªØ³Øª ${i}`);
                    users.push(user);
                }
                
                const duration = Date.now() - startTime;
                return { count, duration, avgTime: duration / count };
            }
            
            async queryUsersByLevel(level) {
                const startTime = Date.now();
                const result = [];
                
                for (let user of this.data.users.values()) {
                    if (user.level === level) {
                        result.push(user);
                    }
                }
                
                const duration = Date.now() - startTime;
                return { result, duration, count: result.length };
            }
            
            async complexQuery() {
                // Ú©Ø§Ø±Ø¨Ø±Ø§Ù†ÛŒ Ú©Ù‡ Ø¯Ø±Ø³ Ø®Ø§ØµÛŒ Ø±Ø§ Ø®Ø±ÛŒØ¯Ù‡â€ŒØ§Ù†Ø¯ Ùˆ Ù¾ÛŒØ´Ø±ÙØª Ø¯Ø§Ø±Ù†Ø¯
                const startTime = Date.now();
                const result = [];
                
                for (let transaction of this.data.transactions.values()) {
                    const user = this.data.users.get(transaction.user_id);
                    const lesson = this.data.lessons.get(transaction.lesson_id);
                    const progress = this.data.progress.get(`${transaction.user_id}_${transaction.lesson_id}`);
                    
                    if (user && lesson && progress) {
                        result.push({
                            user: user.name,
                            lesson: lesson.title,
                            score: progress.score,
                            completed: progress.completed,
                            amount: transaction.amount
                        });
                    }
                }
                
                const duration = Date.now() - startTime;
                return { result, duration, count: result.length };
            }
            
            async rollbackMigration() {
                if (this.version === 3) {
                    // Ø­Ø°Ù Ø¬Ø¯ÙˆÙ„ progress
                    this.data.progress.clear();
                    // Ø­Ø°Ù ÙÛŒÙ„Ø¯ coins
                    for (let user of this.data.users.values()) {
                        delete user.coins;
                    }
                    this.version = 2;
                    logger.warning('Rollback Ø¨Ù‡ Ù†Ø³Ø®Ù‡ 2 Ø§Ù†Ø¬Ø§Ù… Ø´Ø¯');
                }
                return true;
            }
            
            clearDatabase() {
                this.data.users.clear();
                this.data.lessons.clear();
                this.data.progress.clear();
                this.data.transactions.clear();
                this.nextId = { users: 1, lessons: 1, transactions: 1 };
                this.version = 1;
                logger.info('Ø¯ÛŒØªØ§Ø¨ÛŒØ³ Ù¾Ø§Ú© Ø´Ø¯');
            }
            
            getStatistics() {
                return {
                    users: this.data.users.size,
                    lessons: this.data.lessons.size,
                    progress: this.data.progress.size,
                    transactions: this.data.transactions.size,
                    version: this.version
                };
            }
        }

