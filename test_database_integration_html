                    const result = await test.run();
                    card.className = 'test-item passed';
                    status.textContent = 'Ù…ÙˆÙÙ‚';
                    status.className = 'test-status status-passed';
                    output.innerHTML = `<strong>âœ…</strong> ${result}`;
