          {
            "character": "Shopkeeper",
            "english": "It's five dollars.",
            "farsi": "پنج دلار است.",
            "phonetic": "/ɪts faɪv ˈdɒlərz/",
            "audio_url": "audio/dialogs/en_004/five_dollars.mp3"
          },
          {
            "character": "Customer",
            "english": "Can I pay by card?",
            "farsi": "می‌توانم با کارت پرداخت کنم؟",
